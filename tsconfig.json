{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2022",
        "lib": ["ESNext", "DOM", "ESNext.Decorators"],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        // "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        // "noEmit": true,

        /* Linting */
        "strict": true
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
}
